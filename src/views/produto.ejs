<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Produtos</h1>
      <p class="text-center lead">Seus produtos estão abaixo!</p>

      <%- include('includes/messages') %>

      <form action="/produto/register" method="POST">
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        
        <div class="form-group">
          <label>Nome do Produto</label>
          <input value="<%= produto.nome %>" type="text" class="form-control" name="nome">
        </div>

        <div class="form-group">
          <label>Preço do Produto</label>
          <input value="<%= produto.preco %>"  type="text" class="form-control" name="preco">
        </div>

        <div class="form-group">
          <label>Quantidade</label>
          <input value="<%= produto.quantidade %>" type="number" class="form-control" name="quantidade">
        </div>

        <div class="form-group">
          <label>Codigo do Produto</label>
          <input value="<%= produto.codigo %>"  type="text" class="form-control" name="codigo">
        </div>
        
          <button type="submit" class="btn btn-primary">Cadastrar</button>
          <button type="reset" class="btn btn-primary">Limpar</button>

      </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer.ejs') %>